<Window x:Class="Wpf_Bank_A.EditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать клиента" Height="300" Width="400">
    <Grid>
        <TextBlock Text="ФИО:" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FullNameTextBox" Margin="10,30,10,0" VerticalAlignment="Top" GotFocus="FullNameTextBox_GotFocus"/>

        <TextBlock Text="Телефон:" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PhoneNumberTextBox" Margin="10,80,10,0" VerticalAlignment="Top" GotFocus="PhoneNumberTextBox_GotFocus"/>

        <TextBlock Text="Серия паспорта:" Margin="10,110,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PassportSeriesTextBox" Margin="10,130,10,0" VerticalAlignment="Top" GotFocus="PassportSeriesTextBox_GotFocus"/>

        <TextBlock Text="Номер паспорта:" Margin="10,160,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PassportNumberTextBox" Margin="10,180,10,0" VerticalAlignment="Top" GotFocus="PassportNumberTextBox_GotFocus"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button x:Name="DoneButton" Content="Готово" Click="DoneButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
