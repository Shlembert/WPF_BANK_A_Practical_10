<Window x:Class="Wpf_Bank_A.ChangePhoneNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сменить телефон" Height="200" Width="400">
    <Grid>
        <TextBlock x:Name="ClientFullNameTextBlock" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,20,0,0" 
                   FontSize="16" 
                   FontWeight="Bold"/>
        <TextBlock Text="Введите новый номер телефона:" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,50,0,0"/>
        <TextBox x:Name="PhoneNumberTextBox" 
                 Width="200" 
                 Height="25" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Top" 
                 Margin="0,80,0,0" 
                 GotFocus="PhoneNumberTextBox_GotFocus"/>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,0,20">
            <Button Content="Готово" Width="75" Margin="5" Click="DoneButton_Click"/>
            <Button Content="Отмена" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
